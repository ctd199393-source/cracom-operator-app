{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://cracomoperator.ciamlogin.com/41456790-9a33-42f0-a473-260d54e8d1b6/v2.0",
          "clientIdSettingName": "ENTRA_CLIENT_ID",
          "clientSecretSettingName": "ENTRA_CLIENT_SECRET"
        },
        "login": {
          "nameClaimType": "name",
          "loginParameters": [
            "p=SUSI_operator"
          ]
        }
      }
    }
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": [ "authenticated" ]
    },
    {
      "route": "/*",
      "allowedRoles": [ "anonymous" ]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad?p=SUSI_operator",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "Cache-Control": "no-cache"
  }
}
